{
  "plugin_id": "brackets_syntax_checker",
  "enabled": true,
  "options": {
    "check_in_html": false,
    "check_in_strings": false,
    "strict_mode": true,
    "ignore_patterns": [
      "*/vendor/*",
      "*/node_modules/*"
    ]
  },
  "error_levels": {
    "parentesi_non_chiusa": "error",
    "parentesi_non_corrispondente": "warning",
    "parentesi_chiusa_senza_apertura": "error"
  },
  "custom_rules": {
    "max_nesting_depth": 5
  }
}